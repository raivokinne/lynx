let assert = fn(condition, message) {
    if !condition {
        let msg = message
        if !msg {
            msg = "Assertion failed"
        }
        error msg
    }
}

let assertEqual = fn(actual, expected, message) {
    if actual != expected {
        let msg = message
        if !msg {
            msg = "Expected " + expected + " but got " + actual
        }
        error msg
    }
}

let assertNull = fn(value, message) {
    if value != null {
        let msg = message
        if !msg {
            msg = "Expected null but got " + value
        }
        error msg
    }
}

let assertNotNull = fn(value, message) {
    if value == null {
        let msg = message
        if !msg {
            msg = "Expected non-null value"
        }
        error msg
    }
}
